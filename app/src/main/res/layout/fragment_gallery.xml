<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-110dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<RadioGroup
    android:id="@+id/rbgGiaoHang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="130dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:background="@drawable/edittext_border"

    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rbGiaoHangYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có giao hàng"
        android:checked="true" />

    <RadioButton
        android:id="@+id/rbGiaoHangNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không giao hàng"
        android:checked="false" />
</RadioGroup>

        <EditText
            android:id="@+id/edGioMoCua"
            android:layout_width="286dp"
            android:layout_marginTop="28dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:hint="Giờ mở cửa"
            android:inputType="text"
            android:scaleType="centerInside" />
        <EditText
            android:id="@+id/edGioDongCua"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:hint="Giở đóng cửa"
            android:inputType="textEmailAddress"
            android:scaleType="centerInside" />

        <EditText
            android:id="@+id/edLuotThich"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Lượt thích"
            android:inputType="text"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/edTenQuanAn"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Tên quán ăn" />
        <EditText
            android:id="@+id/edHinhQuanAn"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Hình quán ăn" />


        <Button
            android:id="@+id/btnThemQuanAn"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="#62943B"
            android:text="Thêm quán ăn" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>